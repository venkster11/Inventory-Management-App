<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#b39ddb"
    app:cardElevation="8dp"
    android:fadingEdgeLength="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:id="@+id/admin_logs_card_layout">

        <TextView
            android:id="@+id/item_name_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Item Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/user_name_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name_log"
            android:layout_alignParentStart="true"
            android:text="User name"
            android:textColor="@color/lightdark"/>

        <TextView
            android:id="@+id/text_count_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_log"
            android:layout_marginTop="7dp"
            android:text="Count"
            android:textColor="@color/lightdark" />

        <TextView
            android:id="@+id/count_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_log"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/text_count_log"
            android:text="1"
            android:textSize="17sp" />

        <!--<TextView-->
            <!--android:id="@+id/text_date_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/text_count_log"-->
            <!--android:layout_marginTop="6dp"-->
            <!--android:text="Date/Time"-->
            <!--android:textColor="@color/lightdark" />-->

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#7e57c2"
            app:cardElevation="8dp"
            android:layout_below="@id/text_count_log"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="-70dp"

            >
            <TextView
                android:id="@+id/status_log"
                android:padding="8dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCEPTED"
                android:textSize="20sp"
                ></TextView>
        </android.support.v7.widget.CardView>

        <!-- <TextView
            android:id="@+id/status_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_count_log"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="-54dp"
            android:text="Status"
            android:textColor="@color/lightdark"
            android:textSize="20sp" /> -->

    </RelativeLayout>

</android.support.v7.widget.CardView>