<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="#616161"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:id="@+id/admin_logs_card_layout">

        <TextView
            android:id="@+id/item_name_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/admin_logs_card_layout"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Item Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/user_name_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name_log"
            android:layout_alignParentStart="true"
            android:text="User name"
            android:textColor="@color/lightdark"/>

        <TextView
            android:id="@+id/text_count_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_log"
            android:layout_marginTop="7dp"
            android:text="Count"
            android:textColor="@color/lightdark" />

        <TextView
            android:id="@+id/count_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_log"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/text_count_log"
            android:text="1"
            android:textSize="17sp" />

        <!--<TextView-->
            <!--android:id="@+id/text_date_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/text_count_log"-->
            <!--android:layout_marginTop="6dp"-->
            <!--android:text="Date/Time"-->
            <!--android:textColor="@color/lightdark" />-->

        <TextView
            android:id="@+id/status_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_count_log"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="-75dp"
            android:text="Status"
            android:textColor="@color/lightdark"
            android:textSize="20sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>