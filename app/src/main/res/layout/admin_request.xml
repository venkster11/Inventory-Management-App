<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="#616161"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_name_rq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/countx"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Item Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/user_name_rq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name_rq"
            android:layout_alignParentStart="true"
            android:text="User name"
            android:textColor="@color/lightdark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_rq"
            android:id="@+id/textavail"
            android:text="Availabele"
            android:textColor="@color/lightdark"/>

        <TextView
            android:id="@+id/countavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_rq"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/textavail"
            android:text="1" />
        <TextView
            android:id="@+id/textrequested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textavail"
            android:text="Requested"
            android:textColor="@color/lightdark"/>

        <TextView
            android:id="@+id/countrequested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countavailable"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/textrequested"
            android:text="1" />

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textrequested"
            android:text="date and time"
            android:textColor="@color/lightdark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name_rq"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/user_name_rq"
            android:background="@color/colorPrimary"
            android:text="REQUSTED"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/lightdark" />

    </RelativeLayout>

</android.support.v7.widget.CardView>