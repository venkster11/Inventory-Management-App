<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#b39ddb"
    app:cardElevation="15dp"
    android:fadingEdgeLength="15dp"
    android:id="@+id/borrowed_user_item_layout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/borrowed_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/borrowed_countx"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/lightdark"
            android:text="Item Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/borrowed_countx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/borrowed_count"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@id/countu"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/lightdark" />

        <TextView
            android:id="@+id/borrowed_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/lightdark"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />



    </RelativeLayout>

</android.support.v7.widget.CardView>