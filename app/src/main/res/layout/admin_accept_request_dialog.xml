<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:text="Accept This Request"
        android:id="@+id/acptreqname"
        android:textColor="#000000"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/available"
        android:layout_below="@id/acptreqname"
        android:text="Available"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/acptreqname"
        android:layout_toRightOf="@id/available"
        android:layout_marginLeft="23dp"
        android:textColor="#000000"
        android:text="0"
        android:id="@+id/avilcount"
        android:layout_marginTop="5dp"
        android:textSize="20dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requested"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:id="@+id/requested"
        android:layout_below="@id/available"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reqcount"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_below="@id/avilcount"
        android:layout_toRightOf="@id/requested"
        android:layout_marginLeft="10dp"
        android:text="0"

        ></TextView>
</RelativeLayout>